<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techgalavant.npmconvention.ProgramFragment">

        <EditText
            android:id="@+id/goto_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/rounded_search"
            android:hint="@string/gotopage" />

        <Button
            android:id="@+id/btnGoToPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gonow"
            android:layout_toRightOf="@+id/goto_page"
            android:layout_toEndOf="@+id/goto_page" />

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_below="@+id/goto_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</RelativeLayout>